{
    "name": "mileschou/laradra",
    "description": "Package for Laravel with Hydra",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel"
    ],
    "authors": [
        {
            "name": "MilesChou",
            "email": "jangconan@gmail.com",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.2",
        "laminas/laminas-diactoros": "^2.4",
        "ory/hydra-client": "^1.9",
        "php-http/guzzle6-adapter": "^2.0",
        "symfony/psr-http-message-bridge": "^2.0"
    },
    "require-dev": {
        "laravel/framework": "^6.20 | ^7.6 | ^8",
        "oidc/core": "^0.10.0",
        "phpunit/phpunit": "^8.5 | ^9",
        "spatie/async": "^1.5",
        "squizlabs/php_codesniffer": "^3.5",
        "web-token/jwt-signature-algorithm-rsa": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Laradra\\": "src",
            "App\\": "app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
